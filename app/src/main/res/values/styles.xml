<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F57C00</item>
        <item name="colorPrimaryDark">#FF9800</item>
        <item name="colorAccent">#FF9800</item>
    </style>

    <style name="artists">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#cfafaf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="intro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">#cfafaf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid">
        <item name="android:layout_below">@id/intro</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:numColumns">2</item>
        <item name="android:gravity">center</item>
        <item name="android:verticalSpacing">4dp</item>
        <item name="android:horizontalSpacing">4dp</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <style name="gridTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#cfafaf</item>
    </style>

    <style name="nowPlayingText">
        <item name="android:textColor">#FFE4B5</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
